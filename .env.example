# WatermelonD Environment Variables
# Copy this file to .env and configure your secrets

# Flask Secret Key (auto-generated if not set, but better to set explicitly)
# SECRET_KEY=your-secret-key-here

# Database Configuration (optional, defaults to SQLite)
# DATABASE_URL=sqlite:///database/brain.db

# API Keys for External Services
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=...

# MQTT Configuration (if using external broker)
# MQTT_BROKER=localhost
# MQTT_PORT=1883
# MQTT_USERNAME=
# MQTT_PASSWORD=

# SSH Default Credentials (if needed)
# DEFAULT_SSH_USER=pi
# DEFAULT_SSH_PASSWORD=

# Security Settings
# RATE_LIMIT_STORAGE=memory://  # Use redis://localhost:6379 in production
# SESSION_TIMEOUT=3600  # seconds

# Logging Level
# LOG_LEVEL=INFO
